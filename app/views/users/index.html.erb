<h1>List of all users</h1>
<% @users.each do |user| %>
  <main>

    <div><%= image_tag('https://cdn.pixabay.com/photo/2015/04/19/08/32/marguerite-729510_1280.jpg', width: 120) %></div>

    <%= link_to user_path(user) do %>
      <div><%= user.name %></div>
    <% end %>

    <div>Number of posts: <%= user.posts_counter %></div>
    
  </main>
<% end %>
