<h1>List of all posts</h1>

<main>
<%= image_tag(@user.photo, width: 100) %>
<h1><%= @user.name %></h1>
<p >Number of posts: <%= @user.posts_counter%></p>
</div>

<% @posts.each do |post| %>

  <div>
  <%= link_to user_post_path(@user.id, post.id) do %> 
  <h2>Post <%= post.id %>: <%= post.title %></h2>
  <% end %>
  <p><%= post.text %></p>
  <h3>Comments: <%= post.comments_counter%>, Likes: <%= post.likes_counters %><h3>
  </div>

  <div>
  <% post.recent_comments.each do |comment|%>
    <h3><%= comment.author.name %><%= comment.text %></h3>
    <% end %>
    </div>
  </div>
  
  <% end%>

  <button><%= link_to 'Add new Post', new_user_post_path()%></button>
</main>